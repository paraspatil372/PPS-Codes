#include <iostream>
using namespace std;

int main() {
    int number;

    // Input the number
    cout << "Enter a number: ";
    cin >> number;

    // Check if the number is odd or even
    if (number % 2 == 0) {
        cout << number << " is an even number." << endl;
    } else {
        cout << number << " is an odd number." << endl;
    }

    return 0;
}
