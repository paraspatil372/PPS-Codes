#include <iostream>
using namespace std;

int main() {
    int n, sum = 0;
    cout << "Enter the number of elements: ";
    cin >> n;
    for (int i = 1; i <= n; i++) {
        int num;
        cout << "Enter number " << i << ": ";
        cin >> num;
        sum += num;
    }
    float avg = (float)sum / n;
    cout << "Average: " << avg << endl;
    return 0;
}
